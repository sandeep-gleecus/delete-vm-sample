<UserControl x:Class="Inflectra.SpiraTest.Installer.ControlForm.DefaultConfiguration1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" FontWeight="Bold">Configuration</Label>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="5">
            This is a default configuration option for the ProcedureDialog. 
        </TextBlock>
        <StackPanel Grid.Row="2">
            <CheckBox Height="16" Width="120" Margin="5">CheckBox</CheckBox>
            <CheckBox Height="16" Width="120" Margin="5">CheckBox</CheckBox>
            <CheckBox Height="16" Width="120" Margin="5">CheckBox</CheckBox>
            <GroupBox Header="GroupBox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Row="0" Grid.Column="0" Margin="5">CheckBox</CheckBox>
                    <CheckBox Grid.Row="1" Grid.Column="0" Margin="5">CheckBox</CheckBox>
                    <CheckBox Grid.Row="2" Grid.Column="0" Margin="5">CheckBox</CheckBox>
                    <CheckBox Grid.Row="0" Grid.Column="1" Margin="5">CheckBox</CheckBox>
                    <CheckBox Grid.Row="1" Grid.Column="1" Margin="5">CheckBox</CheckBox>
                    <CheckBox Grid.Row="2" Grid.Column="1" Margin="5">CheckBox</CheckBox>
                </Grid>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</UserControl>
