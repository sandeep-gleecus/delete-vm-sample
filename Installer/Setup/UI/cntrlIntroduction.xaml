<UserControl x:Class="Inflectra.SpiraTest.Installer.UI.cntrlIntroduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:Inflectra.SpiraTest.Installer.Themes.Inflectra"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
			 Padding="7"
			 Background="Transparent"
			 >
	<DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Right" Text="{x:Static resx:Resources.Global_ClickNext}" />
        <TextBlock LineStackingStrategy="BlockLineHeight" LineHeight="20" FontSize="14" TextWrapping="Wrap" Text="{x:Static resx:Resources.Introduction_Legend}" />
    </DockPanel>
</UserControl>
