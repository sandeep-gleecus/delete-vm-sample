<UserControl x:Class="Inflectra.SpiraTest.Installer.ControlForm.DefaultConfirmation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
         <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="20" FontWeight="Bold">Confirmation</Label>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" Margin="5">
            This is the default confirmation for the ProcedureDialog; 
            it's not very interesting as you can see. 
            More useful versions of this should indicate a summary of settings made, perhaps using expander controls.
            For slow running procedures this page should also indicate this with a warning.
        </TextBlock>   
    </Grid>
</UserControl>
